<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>      
  <session-factory>
    <!-- Database connection settings -->
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/tp_integrador</property>
    <property name="connection.username">root</property>
    <property name="hibernate.hbm2ddl.auto">create</property>
   <!--  <property name="connection.password"></property> -->
    <property name="show_sql">true</property>
        
    <mapping class="ar.com.utn.integrador.models.Cliente" />
    <mapping class="ar.com.utn.integrador.models.Cuenta" />
    <mapping class="ar.com.utn.integrador.models.Estado" />
    <mapping class="ar.com.utn.integrador.models.Localidad" />
    <mapping class="ar.com.utn.integrador.models.Movimiento" />
    <mapping class="ar.com.utn.integrador.models.Provincia" />
    <mapping class="ar.com.utn.integrador.models.Rol" />
    <mapping class="ar.com.utn.integrador.models.TipoCuenta" />
    <mapping class="ar.com.utn.integrador.models.TipoMovimiento" />
    <mapping class="ar.com.utn.integrador.models.Usuario" />
    
    
  </session-factory>
</hibernate-configuration>